@model MyCoursesVM

<div class="col">
    <div class="card h100">
        <div>
            <img src="~/images/@Model.ImgUrl" class="card-img-top" alt="The picture for the course">
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Price: @Model.Price.ToString("0.00 SEK")</p>
            <p class="card-text">@Model.DescriptionShort</p>
        </div>
        <br />
        <div class="card-footer">
            <a asp-action="EditCourse" asp-route-id=@Model.Id class="btn w-100 payBtn mb-2">Redigera</a>
            <a asp-action="RemoveCourse" asp-route-id=@Model.Id class="btn w-100 btn-warning mb-2">Ta bort</a>
        </div>
    </div>
</div>