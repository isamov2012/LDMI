@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CatalogVM[]

@foreach (var course in Model)
{
	<div>
	@course.Id
	@course.Name
	@course.Price
	@course.ImgName
	@course.ImgAlt
	@course.Category
	@course.DescriptionShort

		<a asp-controller="Lwi" asp-action="Details" asp-route-id="@course.Id">Click Me</a>
	</div>
}
﻿	<!-- Sidebar -->
<nav id="sidebarMenu" class=" d-lg-block sidebar  bg-white">
	<div class="position-sticky">
		<div class="list-group list-group-flush mx-3 mt-4">
			<ul>
				<h2>Filters</h2>
				<li>
					Pris:
					<ul>
						<li>
							<label for="Free">Free</label>
							<input id="Free" name="Price" type="radio" />
						</li>
						<li>
							<label for="Money">Money</label>
							<input name="Price" id="Money" type="radio" />
						</li>
					</ul>
				</li>
				<li>
					Category:
					<ul>
						<li><label for="Miljö">Miljö</label> <input type="checkbox" id="Miljö" /></li>
						<li><label for="Programmering">Programmering</label> <input type="checkbox" id="Programmering" /></li>
						<li><label for="WebbUtveckling">WebbUtveckling</label> <input type="checkbox" id="WebbUtveckling" /></li>
						<li><label for="Databas">Databas</label> <input type="checkbox" id="Databas" /></li>
					</ul>
				</li>
			</ul>
		</div>
	</div>
</nav>
<!-- Sidebar -->
<!-- Navbar -->
<nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
	<!-- Container wrapper -->
	<div class="container-fluid">
		<!-- Toggle button -->
		<button class="navbar-toggler"
				type="button"
				data-mdb-toggle="collapse"
				data-mdb-target="#sidebarMenu"
				aria-controls="sidebarMenu"
				aria-expanded="false"
				aria-label="Toggle navigation">
			<i class="fas fa-bars"></i>
		</button>

}
