@model ShoppingCartVM

<div class="wrapper py-5 px-5">
    <div class="row d-flex align-items-center h-100">
        <div class="col-12">
            <div class="card card-registration card-registration-2" style="border-radius: 15px; overflow:hidden">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-7 flex-column">
                            <div class="p-5">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h1 class="fw-bold mb-0 text-black">Din Korg</h1>
                                </div>
                                @foreach (var course in @Model.shoppingCartItemVMs)
                                {
                                    <partial name="_ShoppingCartItem" model=course />
                                }
                                <hr class="my-4">
                                <h6 class="align-self-bottom">
                                    <a asp-action="Catalog" class="text-body">
                                        <i class="fas fa-long-arrow-alt-left me-2"></i>Tillbaka till kurskatalogen
                                    </a>
                                </h6>
                            </div>
                        </div>
                        <div class="col-lg-5 sideElement">
                            <div class="p-5">
                                <h3 class="fw-bold mb-5 mt-2 pt-1 sideChild">Summary</h3>
                                <hr class="my-4">

                                <div class="d-flex justify-content-between mb-4">
                                    <h5 class="text-uppercase sideChild">Total</h5>
                                    <h5 class="sideChild">@Model.Total</h5>

                                </div>
                                <hr class="my-4">
                                <div class="d-flex justify-content-between mb-5">
                                    <h5 class="text-uppercase sideChild">Att betala</h5>
                                    <h5 class="sideChild">@Model.Total</h5>
                                </div>
                                <a asp-action="Checkout" class="btn checkoutBtn btn-lg" role="button">
                                    Till betalning
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
