
    @model DetailsVM
    <div class="popUpWrapper">
        <div class="card mt-3 mb-3" style="width: 35rem; height: 35rem;">
            <img src="/images/@Model.ImgName" class="card-img-top" alt="...">
            <div class="card-body">
                <h2 class="card-title">@Model.Name</h2>
                <h5 class="card-title">@Model.Category</h5>
                <hr />
                <p class="card-text">@Model.DescriptionLong</p>
            </div>
            <button type="submit" disabled="@Model.InCart" class="addBtn" value="Lägg till i varukorg" onclick="openPopUp()">Lägg till i varukorg</button>
        </div>
    </div>

    <div class="popContainer">
        <div class="popUp" id="popUp">
            <img src="/Photos_and_Icons/CARTMASTAH.jpg" alt="Green cart with check symbol" />
            <h3>La till '@Model.Name' i varukorgen!</h3>
        </div>
    </div>
    <script>
        function openPopUp() {
            const url = "@Url.Action(nameof(LWI.Controllers.LwiController.Details), new { id = Model.Id})";

            $.ajax({
                url: url,
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify("@Model.Id"),
                success: document.getElementById("popUp").classList.add("openPopUpDiv"),
            });
            setTimeout(function () {
                document.getElementById("popUp").classList.remove("openPopUpDiv")
            },
                1500);
        }
    </script>













