@model CreateVM

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-5 gy-4">
            <h3 class="display-4 text-center py-3">Skapa konto</h3>

            <form asp-controller="Account" asp-action="Create">
                <div class="mb-3">
                    <label asp-for="Username" class="fw-bold form-label"></label>
                    <input class="form-control" asp-for="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="fw-bold form-label"></label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="fw-bold form-label"></label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PasswordRepeat" class="fw-bold form-label"></label>
                    <input class="form-control" asp-for="PasswordRepeat" />
                    <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FirstName" class="fw-bold form-label"></label>
                    <input class="form-control" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="fw-bold form-label"></label>
                    <input class="form-control" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Profession" class="fw-bold form-label"></label>
                    <input class="form-control" asp-for="Profession" />
                    <span asp-validation-for="Profession" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="fw-bold form-label"></label>
                    <textarea class="form-control mb-3" asp-for="Description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="submit" class="btn payBtn" value="Create Account" />
            </form>
        </div>
    </div>
</div>