@model CreateVM

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-5 gy-4">
            <h3>Create account</h3>

            <form asp-controller="Account" asp-action="Create">
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
                <input class="form-control" asp-for="Username" />

                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>


                <label asp-for="PasswordRepeat"></label>
                <input class="form-control" asp-for="PasswordRepeat" />
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>


                <label asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>


                <label asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>


                <label asp-for="Profession"></label>
                <input class="form-control" asp-for="Profession" />
                <span asp-validation-for="Profession" class="text-danger"></span>

                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
                </br>
                <input type="submit" value="Create Account" />
            </form>
        </div>
    </div>
</div>