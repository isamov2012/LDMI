@model EditProfileVM

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-5 gy-4">
            <h3 class="display-4 text-center py-3 mb-3">Uppdatera din profil</h3>

            <form asp-controller="Account" asp-action="EditProfile">

                <div class="mb-3">
                    <label asp-for="FirstName" class="fw-bold form-label"></label>
                    <input asp-for="FirstName" value="" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="fw-bold form-label"></label>
                    <input asp-for="LastName" value="" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">

                    <label asp-for="Profession" class="fw-bold form-label"></label>
                    <input asp-for="Profession" value="" class="form-control" />
                    <span asp-validation-for="Profession" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="fw-bold form-label"></label>
                    <input asp-for="Description" value="" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="submit" class="btn payBtn" value="Uppdatera profil" />
            </form>
        </div>
    </div>
</div>